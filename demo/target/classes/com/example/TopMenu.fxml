<BorderPane fx:id="topMenu_total" prefHeight="50" prefWidth="800.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ControllerTopMenu">
  <top>
      <BorderPane prefHeight="50.0" BorderPane.alignment="CENTER">
         <right>
        <!-- Usuario -->
        <AnchorPane nodeOrientation="RIGHT_TO_LEFT" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
          <children>
            <AnchorPane layoutX="10.0" layoutY="7.0" prefHeight="50.0" prefWidth="50.0" styleClass="userIcon" />
            <Label layoutX="63.0" layoutY="5.0" text="Nallely Nuñez Campos" />
            <Label layoutX="63.0" layoutY="28.0" text="Nallelync03@gmail.com" />
          </children>
               <styleClass>
                  <String fx:value="userBox" />
                  <String fx:value="topPane" />
               </styleClass>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
        </AnchorPane>
         </right>
         <left>
          <AnchorPane prefHeight="50.0" styleClass="topPane" BorderPane.alignment="CENTER">
            <children>
              <!-- Logo empresa -->
              <AnchorPane prefHeight="50.0" prefWidth="100.0" styleClass="iconPane" />
              <!-- Nombre empresa -->
              <Label layoutX="106.0" layoutY="14.0" text="Mi Peru Empresa I.R.L" textFill="#ececec">
                     <font>
                        <Font name="Agency FB Bold" size="15.0" />
                     </font></Label>
            </children>
          </AnchorPane>
         </left>
         <center>
        <!-- Accesos rápidos -->
        <HBox fx:id="titleBar" alignment="CENTER" prefHeight="50.0" spacing="15.0" styleClass="topPane" BorderPane.alignment="CENTER">
          <children>
            <AnchorPane minWidth="60.0" onMouseClicked="#btnMinimizar" prefHeight="50.0" prefWidth="60.0" styleClass="minimizar">
              <children>
                <FontIcon iconColor="#ececec" iconLiteral="fas-moon" iconSize="15" layoutX="23.0" layoutY="19.0" onMouseClicked="#btnMinimizar" />
                <Label layoutX="4.0" layoutY="27.0" text="Minimizar" textFill="#ececec" />
              </children>
            </AnchorPane>
            <AnchorPane minWidth="60.0" onMouseClicked="#btnCerrar" prefHeight="50.0" prefWidth="60.0" styleClass="salir">
              <children>
                <FontIcon iconColor="#ececec" iconLiteral="fas-door-open" iconSize="15" layoutX="21.0" layoutY="19.0" onMouseDragged="#btnCerrar" />
                <Label layoutX="18.0" layoutY="27.0" text="Salir" textFill="#ececec" />
              </children>
            </AnchorPane>
          </children>
        </HBox>
         </center>
      </BorderPane>
  </top>

  <stylesheets>
    <URL value="@styles/styleMenu.css" />
    <URL value="@styles/styleDashboard.css" />
      <URL value="@styles/styleTop.css" />
  </stylesheets>
</BorderPane>
